{
  "manifest_version": 3,
  "name": "ApexGuru to VS Code",
  "version": "0.1.1",
  "description": "Adds 'Show Diff in VS Code' and 'Open in VS Code' buttons to Salesforce ApexGuru Insights cards.",
  "permissions": ["storage"],
  "content_scripts": [
    {
      "matches": [
        "*://*.lightning.force.com/*",
        "*://*.my.salesforce.com/*",
        "*://*.my.salesforce-setup.com/*",
        "*://*.salesforce.com/*",
        "*://*.force.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "options_page": "options.html"
}
